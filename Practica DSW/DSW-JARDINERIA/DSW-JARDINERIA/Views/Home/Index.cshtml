@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizador
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div id="globalFather">
        <!-- Inicio de imageContainer -->
        <div id="imageContainer" class="d-flex flex-column justify-content-center align-content-center">
            <h1 class="text-light"> Jardineria de Inmma en ASP.NET </h1>
            <h2 class="text-light"> Todo para tu jadín con estilo.</h2>
        </div>
        <!-- Fin de imageContainer -->
        <!-- Inicio de optionContainer -->
        <div class="optionContainer d-flex flex-row justify-content-around">

            <div id="productContainer">
                <h2> Productos </h2>
                <div id="productos" class="d-flex flex-row align-content-center ">
                    <div id="imgProduct"> </div>
                    <a asp-area="" asp-controller="Productoes" asp-action="Index"> Ir a los productos>></a>
                </div>
            </div>

            <div id="gamaContainer">
                <h2> Gama </h2>
                <div class="d-flex flex-row align-content-center">
                    <div id="imgGama"></div>
                    <a asp-area="" asp-controller="GamaProductoes" asp-action="Index"> Ir a gamas>> </a>

                </div>

            </div>

            <div id="loginContainer">
                <h2> Login </h2>
                <div class="d-flex flex-row align-content-center">
                    <div id="imgLogin"></div>
                    <a asp-area="Identity" asp-page="/Account/Login">Ir a Identificación>></a>

                </div>
            </div>
        </div>
        <!-- Fin de optionContainer -->
    </div>
    <!-- Fin de la caja contenedora -->
</div>
